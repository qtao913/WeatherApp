<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sunnietech.weatherapp.activity.DetailedCityWeather$PlaceholderFragment">

    <TextView android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_double"
        android:paddingLeft="@dimen/spacing_double"
        android:paddingTop="@dimen/spacing_micro"
        android:paddingBottom="@dimen/spacing_micro"
        android:minHeight="?actionBarSize"
        android:background="#ffe6e6"
        android:textAppearance="@style/TextAppearance.Title"
        android:gravity="center_vertical"
        android:transitionName="@string/transition_toolbar"
        tools:ignore="UnusedAttribute,NewApi,RtlSymmetry,PrivateResource" />


    <ImageView android:id="@+id/city_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/city_name"
        tools:ignore="PrivateResource"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_double"
        android:contentDescription="@null"
        android:padding="@dimen/spacing_double"
        android:scaleType="centerCrop"
        android:alpha="0"
        android:scaleX="0.7"
        android:scaleY="0.7"/>

</RelativeLayout>
